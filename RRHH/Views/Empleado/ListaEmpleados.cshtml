@model IEnumerable<RRHH.Models.Empleado>

@{
    ViewBag.Title = "ListaEmpleados";
}

<h2>ListaEmpleados</h2>

<p>
    @Html.ActionLink("Agregar nuevo empleado", "AgregarEmpleado")

    @using (Html.BeginForm("EliminarEmpleado", "Empleado", FormMethod.Post))
    {
        <div class="form-group">
            @Html.Label("Eliminar Empleado por DNI:")
            @Html.TextBox("DNI", null, new { @class = "form-control" })
            <button type="submit" class="btn btn-danger">Eliminar</button>
        </div>
    }
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.DNI)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.NombreCompleto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroDeHijos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstadoCivil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PuestoDeTrabajo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salario)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDeHijos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoCivil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PuestoDeTrabajo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
        </tr>

        

    }

</table>
